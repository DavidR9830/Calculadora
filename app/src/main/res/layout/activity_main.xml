<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/botonSenoCoseno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular seno o coseno"
        android:layout_below="@id/textoTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/botonPerimetroArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular perímetro o área"
        android:layout_below="@id/botonSenoCoseno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
