<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/figuraRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/cuadradoRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuadrado" />

        <RadioButton
            android:id="@+id/rectanguloRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rectángulo" />

    </RadioGroup>

    <EditText
        android:id="@+id/baseEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/figuraRadioGroup"
        android:layout_centerHorizontal="true"
        android:hint="Base"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/alturaEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/baseEditText"
        android:layout_centerHorizontal="true"
        android:hint="Altura"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:id="@+id/calculoRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alturaEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/areaRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área" />

        <RadioButton
            android:id="@+id/perimetroRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perímetro" />

    </RadioGroup>

    <Button
        android:id="@+id/calcularButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculoRadioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Calcular" />

</RelativeLayout>
